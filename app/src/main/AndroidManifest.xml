<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="git.rahulparihar.materialdesignshowcase">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="git.rahulparihar.materialdesignshowcase.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="git.rahulparihar.materialdesignshowcase.ColorActivity"
            android:label="@string/title_activity_color"></activity>
        <activity
            android:name="git.rahulparihar.materialdesignshowcase.DialerSampleActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="git.rahulparihar.materialdesignshowcase.ElevationSampleActivity"
            android:label="@string/title_activity_color" />
        <activity
            android:name="git.rahulparihar.materialdesignshowcase.SlidingActivity"
            android:label="@string/title_activity_elevation_sample"></activity>
        <activity
            android:name="git.rahulparihar.materialdesignshowcase.TransitionFirstActivity"
            android:theme="@style/TransitionSampleActivity"></activity>
        <activity
            android:name="git.rahulparihar.materialdesignshowcase.TransitionSecondActivity"
            android:theme="@style/TransitionSampleSecondActivity" />
        <activity
            android:name="git.rahulparihar.materialdesignshowcase.RecyclerSampleActivity"
            android:label="Recycler Sample"></activity>
        <activity
            android:name="git.rahulparihar.materialdesignshowcase.DetailActivity"
            android:label="Detail Activity"></activity>
    </application>

</manifest>
